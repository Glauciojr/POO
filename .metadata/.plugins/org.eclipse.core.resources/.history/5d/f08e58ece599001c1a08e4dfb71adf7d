public class Exercicio01 {

	public static void main(String[] args) {

		System.out.println("Resultados");
		
		int n1 = 10;
		int n2 = 30;
		int soma = n1 + n2;
		
		System.out.printf("O valor da soma é: %.0f%n", soma);
		
		double n3 = -30;
		double n4 = 10;
		double soma2 = n3 + n4;
		
		System.out.printf("O valor da soma é: %.0f%n", soma2);
		
		double n5 = 0;
		double n6 = 0;
		double soma3 = n5 + n6;
		
		System.out.printf("O valor da soma é: %.0f%n", soma3);
		
	}

}
